/* pages/user/user.wxss */
.container{
  width:100%;
  height: 100vh;
  background-color:#f2f2f2;
  position: relative;
}

.userInfo{
  padding: 50rpx;
  text-align: center;
  background-color: #fff;
}

.userInfo image{
  height: 150rpx;
  width:150rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.userInfo text{
  display: block;
  margin-top: 50rpx;
  font-size: 32rpx;
}

.wallet{
  margin-top: 40rpx;
  background-color: #fff;
  padding: 50rpx;
  display: flex;
  justify-content: space-between;
}

.login button{
  width: 90%;
  position: absolute;
  bottom: 100rpx;
  left: 5%;
}